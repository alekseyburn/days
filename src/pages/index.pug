extends ../pug/layout.pug

block meta
  title Travel Days
  meta(name='description', content='lorem ipsum')

  block append head
    link(rel='preload', href='fonts/montserrat.woff2', as='font', crossorigin='anonymous')

block header
  +logo('/', 'page-header__logo')
    picture
      source(type='image/webp', srcset='img/logo-days.webp')
      img.logo__img(src='img/logo-days.png', width='130', height='55', alt='Days logo', loading='lazy')
  button.page-header__btn
    span.visually-hidden toggle menu

